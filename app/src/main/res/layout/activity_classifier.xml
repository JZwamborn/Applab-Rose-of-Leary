<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="[Situation to respond to]"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/roos" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/lb_you" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/ro_you" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/rb_you" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/lo_you" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:gravity="center"
            android:text=""
            android:textColor="#808080"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="341dp"
            android:layout_height="41dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_below="@id/feedback"
            android:ems="10"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText4"
            android:background="@color/colorPrimary"
            android:onClick="login"
            android:layout_marginTop="20dp"
            android:text="Send"
            android:textColor="@color/textColor" />

            <Button
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText4"
                android:background="#6ACCCB"
                android:layout_marginTop="15dp"
                android:text="Next"
                android:clickable="true"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button5"
                android:visibility="invisible"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText4"
                android:background="#6ACCCB"
                android:layout_marginTop="15dp"
                android:text="Finish"
                android:clickable="true"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="-4dp"
                android:layout_below="@+id/button5"
                android:layout_alignParentBottom="true"
                android:progress="60"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="5"/>

        </RelativeLayout>
    </LinearLayout>

