<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:text="[Situation to respond to]"
            android:textColor="#808080"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/roos" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/lb_blue" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/ro_blue" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/rb_blue" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/lo_blue" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="341dp"
            android:layout_height="41dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView2"
            android:backgroundTint="#6ACCCB"
            android:ems="10"
            android:layout_marginTop="50dp"
            android:inputType="textPersonName"
            android:textColor="#808080" />

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText4"
            android:background="#6ACCCB"
            android:onClick="login"
            android:layout_marginTop="20dp"
            android:text="Send"
            android:textColor="@android:color/white" />

    </RelativeLayout>

