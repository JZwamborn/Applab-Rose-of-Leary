<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:background="#ffffff"
        android:padding="16dp"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="[Situation to respond to]"
            android:textColor="#808080"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/roos" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/lb_you" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/ro_you" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/rb_you" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:srcCompat="@drawable/lo_you" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:gravity="center"
            android:text=""
            android:textColor="#808080"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="341dp"
            android:layout_height="41dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/feedback"
            android:backgroundTint="#6ACCCB"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:textColor="#808080" />

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText4"
            android:background="#6ACCCB"
            android:layout_marginTop="10dp"
            android:text="Send"
            android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button4"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editText4"
                android:background="#6ACCCB"
                android:layout_marginTop="10dp"
                android:text="Next"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        </ScrollView>
    </LinearLayout>

